<h2>Editing Book</h2>

<%= form_with model: @book,url: update_list_path(@book.id),method: :patch do |f| %>

<h5>Title</h5>
  <p class="edit-form"><%= f.text_field :title %></p>

<h5>Body</h5>
  <p class="edit-form"><%= f.text_area :body %></p>


  <p class="edit-form"><%= f.submit'Update Book' %></p>
<% end %>
