<header>
  <h1><strong>Books</strong></h1>
</header>

<table>
 <thead>
  <tr>
   <th>Title</th>
   <th>Body</th>
   <th></th>
  </tr>
 </thead>

 <tbody>
   <% @b.each do |book| %>
   <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', name_path(book.id) %></td>
      <td><%= link_to 'Edit', edit_list_path(book.id) %></td>
      <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
   </tr>
   <% end %>

  </tbody>
</table>

<h2><strong>New book</strong></h2>

<% if @books.errors.any? %>
  error
  <ul>
    <% @books.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

   <%= form_with model: @books do |f| %>
   <h5>Title</h5>
    <p class="form"><%= f.text_field :title %></p>

   <h5>Body</h5>
    <p class="form"><%= f.text_area :body %></p>

    <p class="form"><%= f.submit'Create Book' %></p>
   <% end %>
